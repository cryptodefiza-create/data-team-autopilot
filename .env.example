DATABASE_URL=sqlite+pysqlite:///./autopilot.db
ALLOW_REAL_QUERY_EXECUTION=false
DEFAULT_QUERY_LIMIT=10000
PER_ORG_MAX_WORKFLOWS=3
PER_ORG_MAX_PROFILE_WORKFLOWS=2
REDIS_URL=redis://localhost:6379/0

# BigQuery runtime mode
BIGQUERY_MOCK_MODE=true
BIGQUERY_PROJECT_ID=
BIGQUERY_LOCATION=US
BIGQUERY_SERVICE_ACCOUNT_JSON=

# Metabase runtime mode
METABASE_MOCK_MODE=true
METABASE_URL=http://localhost:3000
METABASE_API_KEY=

# Run connectivity checks on startup (recommended true in staging/prod)
RUN_STARTUP_CONNECTION_TESTS=false

# Slack integration
SLACK_SIGNING_SECRET=
SLACK_BOT_TOKEN=
SLACK_DEFAULT_ORG_ID=

# Telegram integration
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=
TELEGRAM_DEFAULT_ORG_ID=

# LLM
LLM_API_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=
LLM_MODEL=
LLM_TIMEOUT_SECONDS=30
LLM_TEMPERATURE=0
