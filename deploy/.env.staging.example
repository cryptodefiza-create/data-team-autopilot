# Core app
APP_NAME=Data Team Autopilot
ENVIRONMENT=staging
DATABASE_URL=sqlite+pysqlite:////app/data/autopilot.db
ALLOW_REAL_QUERY_EXECUTION=false
DEFAULT_QUERY_LIMIT=10000
PER_ORG_MAX_WORKFLOWS=3
PER_ORG_MAX_PROFILE_WORKFLOWS=2

# Redis
REDIS_URL=redis://redis:6379/0

# BigQuery (set to false + real project for live mode)
BIGQUERY_MOCK_MODE=true
BIGQUERY_PROJECT_ID=
BIGQUERY_LOCATION=US

# Metabase (set to false + API key for live mode)
METABASE_MOCK_MODE=true
METABASE_URL=http://metabase:3000
METABASE_API_KEY=

# Startup checks (set true when dependencies are ready)
RUN_STARTUP_CONNECTION_TESTS=false
