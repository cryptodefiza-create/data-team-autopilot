# Live cutover template
# Copy to deploy/.env.live and fill all required values.

APP_NAME=Data Team Autopilot
ENVIRONMENT=production
DATABASE_URL=sqlite+pysqlite:////app/data/autopilot.db
ALLOW_REAL_QUERY_EXECUTION=false
DEFAULT_QUERY_LIMIT=10000
PER_ORG_MAX_WORKFLOWS=3
PER_ORG_MAX_PROFILE_WORKFLOWS=2

REDIS_URL=redis://redis:6379/0

# Live integrations
BIGQUERY_MOCK_MODE=false
BIGQUERY_PROJECT_ID=CHANGE_ME
BIGQUERY_LOCATION=US
BIGQUERY_SERVICE_ACCOUNT_JSON=CHANGE_ME

METABASE_MOCK_MODE=false
METABASE_URL=CHANGE_ME
METABASE_API_KEY=CHANGE_ME

# Must be true for live readiness/startup checks
RUN_STARTUP_CONNECTION_TESTS=true

# Slack integration
SLACK_SIGNING_SECRET=CHANGE_ME
SLACK_BOT_TOKEN=CHANGE_ME
SLACK_DEFAULT_ORG_ID=

# Telegram integration
TELEGRAM_BOT_TOKEN=CHANGE_ME
TELEGRAM_WEBHOOK_SECRET=CHANGE_ME
TELEGRAM_DEFAULT_ORG_ID=
